{
  "name": "votacion-colegio",
  "version": "2.0.0",
  "description": "Sistema de votaciÃ³n escolar con arquitectura enterprise",
  "private": true,
  "author": "Voting System Team",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "preview": "npm run build && npm run start",
    "clean": "rm -rf .next out",
    "generate-icons": "node scripts/generate-icons.js",
    "pre-commit": "npm run lint:fix && npm run type-check",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=out",
    "health-check": "node scripts/health-check.js",
    "postinstall": "npm run generate-icons"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/jest": "^29.5.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "sharp": "^0.34.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "optionalDependencies": {
    "next-pwa": "^5.6.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ]
  },
  "keywords": [
    "voting",
    "school",
    "next.js",
    "react",
    "typescript",
    "pwa",
    "offline-first"
  ]
}